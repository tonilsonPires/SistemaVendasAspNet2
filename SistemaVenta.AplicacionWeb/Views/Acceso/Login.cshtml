@model SistemaVenta.AplicacionWeb.Models.ViewModels.VMUsuarioLogin;

@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="ES">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Mi Tienda - Login</title>

  <!-- Custom fonts for this template-->
  <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="~/css/sb-admin-2.css" rel="stylesheet">

</head>

<body class="" style="margin:0; padding:0;">


    <!-- Outer Row -->
        <div class="row " style="margin:0; padding:0;">

        <div class="col-xl-12 col-lg-12 col-md-12" style="margin:0; padding:0;">

           <div class="card shadow-lg " nstyle="margin:0; padding:0;">
           <div class="card-body" style="margin:0; padding:0;">
            <!-- Nested Row within Card Body -->
            <div class="row" style="margin:0; padding:0;">
              <div class="col-lg-7 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-5">
                <div class="p-5">
                  <div class="text-center">
                    <div class="img_logo">
                        <img src="~/img/logo.png" width="" alt="">
                    </div>
                      <h1 class="h4 text-gray-900">Bem-Vindo!</h1>
                      <p class="text-gray-900">Faça Login a sua conta e comece a sua jornada</p> <br />
              
                  </div>
                  <form class="user" asp-controller="Acceso" asp-action="Login" method="POST">
                    <div class="form-group">
                      <input type="email" class="form-control form-control-user" placeholder="Email" asp-for="Correo">
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control form-control-user" placeholder="Senha" asp-for="Clave">
                    </div>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox small">
                        <input type="checkbox" class="custom-control-input" id="chkMantenerSesion" asp-for="MantenerSesion">
                        <label class="custom-control-label" for="chkMantenerSesion">Manter-se Logado</label>
                      </div>
                    </div>

                    @if (ViewData["Mensaje"] != null)
                    {
                      <div class="form-group">
                        <div class="alert alert-danger" role="alert">
                          @ViewData["Mensaje"]
                        </div>
                      </div>
                    }

                    <button type="submit" class="btn btn-primary btn-user btn-block">
                      Entrar
                    </button>
                  </form>
                  <hr>
                  <div class="text-center">
                     <a class="small" href="@Url.Action("RestablecerClave","Acceso")">Esqueceu sua senha??</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>


</body>

</html>
