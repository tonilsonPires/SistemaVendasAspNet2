
@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-sm-4">

                            <div class="card shadow mb-4">
                                <div class="card-header py-3 bg-second-primary">
                                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-user"></i> Meus Dados</h6>
                                </div>
                                <div class="card-body">

                                    <form>
                                                <div class="form-row">
                                                    <div class="form-group col-sm-12">
                                                        <img id="imgFoto" src="https://images.unsplash.com/photo-1519648023493-d82b5f8d7b8a?w=300" class="rounded mx-auto d-block" style="width: 200px; height: 200px;">
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-sm-12">
                                                        <label for="txtNombre">Nome</label>
                                                        <input type="text" class="form-control form-control-sm" disabled id="txtNombre">
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-sm-12">
                                                        <label for="txtCorreo">Email</label>
                                                        <input type="email" class="form-control form-control-sm" id="txtCorreo">
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-sm-12">
                                                        <label for="txTelefono">Telefone</label>
                                                        <input type="text" class="form-control form-control-sm" id="txTelefono">
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-sm-12">
                                                        <label for="txtRol">Nível de acesso</label>
                                                        <input type="text" class="form-control form-control-sm" disabled id="txtRol">
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <button type="button" class="btn btn-success btn-sm btn-block" id="btnGuardarCambios">Salvar alterações</button>
                                                    </div>
                                                </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                        <div class="col-sm-4">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 bg-second-primary">
                                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-key"></i> Alterar Senha</h6>
                                </div>
                                <div class="card-body">
                                    <form>
                                        <div class="form-row">
                                            <div class="form-group col-sm-12">
                                                <label for="txtClaveActual">Senha Actual</label>
                                                <input type="password" class="form-control form-control-sm input-validar" id="txtClaveActual" name="Clave Actual">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-sm-12">
                                                <label for="txtClaveNueva">Nova senha</label>
                                                <input type="password" class="form-control form-control-sm input-validar" id="txtClaveNueva" name="Clave Nueva">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-sm-12">
                                                <label for="txtConfirmarClave">Confirmar Senha</label>
                                                <input type="password" class="form-control form-control-sm input-validar" id="txtConfirmarClave" name="Confirmar Clave">
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <button type="button" class="btn btn-success btn-sm btn-block" id="btnCambiarClave">Salvar alterações</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>




                </div>
                <!-- /.container-fluid -->

