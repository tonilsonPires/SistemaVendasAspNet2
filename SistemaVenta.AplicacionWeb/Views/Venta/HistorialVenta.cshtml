@{
  ViewData["Title"] = "Historial Venta";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos {
  <!-- ============================================================
  =ESTILOS PARA ESTA PAGINA
  ===============================================================-->
  <link href="~/vendor/jquery-ui/jquery-ui.css" rel="stylesheet">
}

<!-- Begin Page Content -->
<div class="container-fluid">

  <div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
      <h6 class="m-0 font-weight-bold text-white">Histórico de Vendas</h6>
    </div>
    <div class="card-body">
      <div class="form-row align-items-end">
        <div class="form-group col-sm-3">
          <label for="cboBuscarPor">Pesquisar por</label>
          <select class="form-control form-control-sm" id="cboBuscarPor">
            <option value="fecha">Datas</option>
            <option value="numero">Numero da Venda</option>
          </select>
        </div>
        <div class="form-group col-sm-3 busqueda-fecha">
          <label for="txtFechaInicio">Data Inicial</label>
          <input type="text" class="form-control form-control-sm" id="txtFechaInicio">
        </div>
        <div class="form-group col-sm-3 busqueda-fecha">
          <label for="txtFechaFin">Data Final</label>
          <input type="text" class="form-control form-control-sm" id="txtFechaFin">
        </div>
        <div class="form-group col-sm-3 busqueda-venta">
          <label for="txtNumeroVenta">Numero da Venda</label>
          <input type="text" class="form-control form-control-sm" id="txtNumeroVenta">
        </div>
        <div class="form-group col-sm-3">
          <button class="btn btn-success btn-block btn-sm" type="button" id="btnBuscar"><i class="fas fa-search"></i> Pesquisar</button>
        </div>
      </div>

      <hr />
      <div class="row">
        <div class="col-sm-12">
          <table class="table table-sm table-striped" id="tbventa">
            <thead>
              <tr>
                <th>Data de Registro</th>
                <th>Numero da Venda</th>
                <th>Tipo Documento</th>
                <th>NIF Cliente</th>
                <th>Nome Cliente</th>
                <th>Total</th>
                <th></th>
              </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>

  <!--  Modal-->
  <div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h6>Detalhe da Venda</h6>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="row">
              <div class="col-sm-12">
                <div class="form-row">
                  <div class="form-group col-sm-4">
                    <label for="txtFechaRegistro">Data de Registro</label>
                    <input type="text" class="form-control form-control-sm" id="txtFechaRegistro" disabled>
                  </div>
                  <div class="form-group col-sm-4">
                    <label for="txtNumVenta">Numero da Venda</label>
                    <input type="text" class="form-control form-control-sm" id="txtNumVenta" disabled>
                  </div>
                  <div class="form-group col-sm-4">
                    <label for="txtUsuarioRegistro">Usuario Registrado</label>
                    <input type="text" class="form-control form-control-sm" id="txtUsuarioRegistro" disabled>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-sm-4">
                    <label for="txtTipoDocumento">Tipo de Documento</label>
                    <input type="text" class="form-control form-control-sm" id="txtTipoDocumento" disabled>
                  </div>
                  <div class="form-group col-sm-4">
                    <label for="txtDocumentoCliente">NIF Cliente</label>
                    <input type="text" class="form-control form-control-sm" id="txtDocumentoCliente" disabled>
                  </div>
                  <div class="form-group col-sm-4">
                    <label for="txtNombreCliente">Nome Cliente</label>
                    <input type="text" class="form-control form-control-sm" id="txtNombreCliente" disabled>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-sm-4">
                    <label for="txtSubTotal">Total</label>
                    <input type="text" class="form-control form-control-sm" id="txtSubTotal" disabled>
                  </div>
                  <div class="form-group col-sm-4">
                    <label for="txtIGV">IVA</label>
                    <input type="text" class="form-control form-control-sm" id="txtIGV" disabled>
                  </div>
                  <div class="form-group col-sm-4">
                    <label for="txtTotal">Total Geral</label>
                    <input type="text" class="form-control form-control-sm" id="txtTotal" disabled>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <table id="tbProductos" class="table table-sm table-striped">
                      <thead>
                        <tr>
                          <th>Produto</th>
                          <th>Quantidade</th>
                          <th>Preço</th>
                          <th>Total</th>
                        </tr>
                      </thead>
                      <tbody>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <a href="#" class="btn btn-primary btn-sm" target="_blank" id="linkImprimir">Imprimir</a>
          <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancelar</button>
        </div>
      </div>
    </div>
  </div>


</div>
<!-- /.container-fluid -->
@section Scripts {
  <!-- ============================================================
  =SCRIPTS PARA ESTA PAGINA
  ===============================================================-->

  <script src="~/vendor/jquery-ui/jquery-ui.js"></script>
  <script src="~/vendor/jquery-ui/idioma/datepicker-es.js"></script>

  <script src="~/js/vistas/Historial_Venta.js"></script>
}
