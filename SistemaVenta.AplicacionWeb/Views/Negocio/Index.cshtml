@{
  ViewData["Title"] = "Negocio";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

  <div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
      <h6 class="m-0 font-weight-bold text-white">Configuração da Empresa</h6>
    </div>
    <div class="card-body">

      <div class="row">
        <div class="col-sm-12">
          <form>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-row">
                  <div class="form-group col-sm-6">
                    <label for="txtNumeroDocumento">NIF da empresa</label>
                    <input type="text" class="form-control form-control-sm input-validar" id="txtNumeroDocumento" name="Numero Documento">
                  </div>
                  <div class="form-group col-sm-6">
                    <label for="txtCorreo">Nome da Empresa</label>
                    <input type="text" class="form-control form-control-sm input-validar" id="txtRazonSocial" name="Razon Social">
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-sm-6">
                    <label for="txtCorreo">Email</label>
                    <input type="email" class="form-control form-control-sm input-validar" id="txtCorreo" name="Correo">
                  </div>
                  <div class="form-group col-sm-6">
                                        <label for="txtDireccion">Endereço</label>
                    <input type="text" class="form-control form-control-sm input-validar" id="txtDireccion" name="Direccion">
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-sm-6">
                    <label for="txTelefono">Telefone</label>
                    <input type="text" class="form-control form-control-sm input-validar" id="txTelefono" name="Telefono">
                  </div>
                  <div class="form-group col-sm-6">
                    <label for="txtImpuesto">% Imposto</label>
                    <input type="text" class="form-control form-control-sm input-validar" id="txtImpuesto" name="Impuesto">
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-sm-6">
                    <label for="txtSimboloMoneda">Símbolo da moeda</label>
                    <input type="text" class="form-control form-control-sm input-validar" id="txtSimboloMoneda" name="Simbolo Moneda">
                  </div>
                  <div class="form-group col-sm-6">
                    <label for="txtLogo">Logo da Empresa</label>
                    <input class="form-control-file" type="file" id="txtLogo" />
                  </div>
                </div>
              </div>
              <div class="col-sm-4">
                <div class="row">
                  <div class="col-sm-12">
                    <img id="imgLogo" style="max-width:200px;" src="" class="rounded" alt="Logo">
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-12">
                    <button class="btn btn-success btn-sm" type="button" id="btnGuardarCambios">Salvar alterações</button>
                  </div>
                </div>

              </div>

            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->

@section Scripts {
  <script src="~/js/vistas/Negocio_Index.js"></script>
}
